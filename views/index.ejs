<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Recipes</title>
    <%- include('components/imports.ejs') %>
</head>
<body>
    <%- include('components/header.ejs') %>

    <div class="container">
        <% if (user) { %>
            <div class="fs-5 mb-4">Welcome, <%= user.username %></div>
        <% } %>
        <div class="mt-3">
            <img src="https://png.pngtree.com/thumb_back/fw800/background/20230527/pngtree-food-spread-on-the-table-image_2680281.jpg" class="img-fluid rounded-4 object-fit-cover" style="width: 100%; height: 420px;">
        </div>
    </div>

    <div class="container">
        <div class="my-4 fs-2 fw-semibold">Latest Recipes</div>
        
        <div class="row row-cols-1 row-cols-md-3 g-4"> 
            <% recipes.forEach((value) => { %>
                <%- include('components/recipe_card.ejs', { recipe: value }) %>
            <% }); %>
        </div>
                
    </div>
</body>
</html>